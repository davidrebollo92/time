{
   "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
   },
   "typingOptions": {
      "enableAutoDiscovery": true
   },
   "compileOnSave": true,
   "include": ["src"]
}
